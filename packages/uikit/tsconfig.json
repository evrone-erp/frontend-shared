{
  "include": ["src", "types"],
  "extends": "@evrone-erp/eslint-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "plugins": [
      { "transform": "typescript-transform-paths" },
      { "transform": "typescript-transform-paths", "afterDeclarations": true }
    ]
  },
  "exclude": ["node_modules"]
}
